page {
  font-size: 16px;
}
page {
  margin: 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', 'Microsoft Yahei', sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
view,
image,
text {
  box-sizing: border-box;
  flex-shrink: 0;
}
#app {
  width: 100vw;
  height: 100vh;
}
.flex-row {
  display: flex;
  flex-direction: row;
}
.flex-col {
  display: flex;
  flex-direction: column;
}
.justify-start {
  display: flex;
  justify-content: flex-start;
}
.justify-center {
  display: flex;
  justify-content: center;
}
.justify-end {
  display: flex;
  justify-content: flex-end;
}
.justify-evenly {
  display: flex;
  justify-content: space-evenly;
}
.justify-around {
  display: flex;
  justify-content: space-around;
}
.justify-between {
  display: flex;
  justify-content: space-between;
}
.items-start {
  display: flex;
  align-items: flex-start;
}
.items-center {
  display: flex;
  align-items: center;
}
.items-end {
  display: flex;
  align-items: flex-end;
}
page {
  background-color: #F8F8F8;
}
 .uni-numbox {
  background-color: #fff;
  left: 200rpx;
  position: relative;
}
 .cart-item .checkbox {
  border-radius: none;
}
.container {
  padding-bottom: 100rpx;
  /* 空白页 */
}
.container .empty {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100vh;
  padding-bottom: 100rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  background: #fff;
}
.container .empty image {
  width: 517.7rpx;
  height: 360.425rpx;
  margin-bottom: 30rpx;
}
.container .empty .empty-tips {
  display: flex;
  font-size: 26rpx;
  color: #C0C4CC;
}
.container .empty .empty-tips .navigator {
  color: #fa436a;
  margin-left: 16rpx;
}
.container .empty .add-btn {
  margin-top: 40rpx;
  font-size: 32rpx;
  color: #EE1D23;
  background-color: #fa436a;
  border-radius: 50rpx;
  background: #fff;
  /* border: 1px solid #EE1D23; */
  box-shadow: 1px 2px 5px rgba(219, 63, 96, 0.4);
  letter-spacing: 6rpx;
}
/* 购物车列表项 */
.cart-item {
  display: flex;
  position: relative;
  margin: 30rpx;
  padding: 20rpx 20rpx 20rpx 50rpx;
  background-color: #fff;
  border-radius: 10px;
}
.cart-item .image-wrapper {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
  position: relative;
  margin-left: 10px;
}
.cart-item .image-wrapper image {
  border-radius: 8rpx;
}
.cart-item .checkbox {
  position: absolute;
  left: -60rpx;
  top: 80rpx;
  z-index: 8;
  font-size: 40rpx;
  line-height: 1;
  padding: 4rpx;
  color: #C0C4CC;
  background: #fff;
  border-radius: 50px;
}
.cart-item .item-right {
  display: flex;
  flex-direction: column;
  flex: 1;
  overflow: hidden;
  position: relative;
  padding-left: 20rpx;
}
.cart-item .item-right .title {
  font-size: 30rpx;
  color: #303133;
  height: 80rpx;
  line-height: 80rpx;
}
.cart-item .item-right .price {
  font-size: 30rpx;
  color: #303133;
  height: 50rpx;
  line-height: 50rpx;
  position: absolute;
  bottom: 5px;
  color: #EE1D23;
  font-weight: 600;
}
.cart-item .item-right .attr {
  font-size: 26rpx;
  color: #909399;
  height: 50rpx;
  line-height: 50rpx;
}
.cart-item .del-btn {
  padding: 4rpx 10rpx;
  font-size: 34rpx;
  height: 50rpx;
  color: #909399;
}
/* 底部栏 */
.action-section {
  position: fixed;
  bottom: 0;
  z-index: 95;
  display: flex;
  align-items: center;
  width: 100%;
  height: 100rpx;
  padding-left: 42rpx;
  background: white;
  /* box-shadow: 0 0 1px 0 rgba(0,0,0,.5); */
}
.action-section .checkbox {
  height: 52rpx;
  position: relative;
}
.action-section .checkbox image {
  width: 40rpx;
  height: 100%;
  position: relative;
  z-index: 5;
}
.action-section .allText {
  position: absolute;
  left: 60rpx;
  top: 0;
  z-index: 4;
  width: 80rpx;
  height: 52rpx;
  line-height: 52rpx;
  font-size: 24rpx;
  color: #666;
}
.action-section .clear-btn {
  position: absolute;
  left: 26rpx;
  top: 0;
  z-index: 4;
  width: 0;
  height: 52rpx;
  line-height: 52rpx;
  padding-left: 38rpx;
  font-size: 28rpx;
  color: #fff;
  background: #C0C4CC;
  border-radius: 0 50px 50px 0;
  opacity: 0;
  transition: .2s;
}
.action-section .clear-btn.show {
  opacity: 1;
  width: 120rpx;
}
.action-section .clear {
  font-size: 28rpx;
  color: #EE1D23;
  margin-left: 140rpx !important;
}
.action-section .total-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  text-align: left;
  margin-left: 120rpx;
}
.action-section .total-box .price {
  font-size: 32rpx;
  color: #303133;
}
.action-section .total-box .coupon {
  font-size: 24rpx;
  color: #909399;
  /* margin-right: 112upx; */
  width: 222rpx;
  font-size: 20rpx;
}
.action-section .total-box .coupon text {
  color: #303133;
}
.action-section .confirm-btn {
  padding: 0 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-right: 30rpx;
  font-size: 30rpx;
  background: #EE1D23;
  border-radius: 60rpx;
  box-shadow: 1px 2px 5px rgba(217, 60, 93, 0.72);
}
.action-section .delete-btn {
  padding: 0 40rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin-right: 30rpx;
  font-size: 30rpx;
  border-radius: 60rpx;
  font-size: 24rpx;
  background-color: #fff;
  border: 1px solid #ddd;
}
/* 复选框选中状态 */
.action-section .checkbox.checked,
.cart-item .checkbox.checked {
  color: #EE1D23;
  font-size: 20px;
}

