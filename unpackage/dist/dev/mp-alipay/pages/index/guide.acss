
page,
.content{
	width: 100%;
	height: 100%;
	background-size: 100% auto ;
	padding: 0;
}
.swiper{
	width: 100%;
	height: 100%;
	background: #FFFFFF;
}
.swiper-item {
	width: 100%;
	height: 100%;
	text-align: center;
	position: relative;
	display: flex;
	/* justify-content: center; */
	align-items:flex-end;
	flex-direction:column-reverse
}
.swiper-item-img{
	width: 100%;
	height: 100%;
	/* margin: 0 auto; */
}
.swiper-item image{
	width: 100%;
	height: 100%;
}
.uniapp-img{
	/* height: 20%; */
	background: #FFFFFF;
	display: flex;
	justify-content: center;
	align-items:center;
	overflow: hidden;
}
.uniapp-img image{
	width: 40%;
}
.jump-over,.experience{
	position: absolute;
	height: 60rpx;
	line-height: 56rpx;
	padding: 0 40rpx;
	border-radius: 30rpx;
	font-size: 32rpx;
	color: #fff;
	border: 1px solid #fff;
	z-index: 999;
}
.jump-over{
	right: 45rpx;
	top: 125rpx;
}
.experience{
	right: 50%;
	margin-right: -105rpx;
	bottom: 16%;
}

