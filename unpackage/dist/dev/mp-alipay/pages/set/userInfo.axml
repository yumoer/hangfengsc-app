<view class="content"><view class="wrap"><view class="row b-b"><text class="tit">用户名</text><input class="input" type="text" placeholder="请输入用户名" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','username','$event',[]],['userInfo']]]]]}}" value="{{userInfo.username}}" onInput="__e"/></view><view class="row b-b"><text class="tit">手机号</text><input class="input" type="number" placeholder="请输入手机号码" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','mobile','$event',[]],['userInfo']]]]]}}" value="{{userInfo.mobile}}" onInput="__e"/></view><view class="row"><text class="tit">电子邮件</text><input class="input" type="text" placeholder="请输入电子邮件" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','email','$event',[]],['userInfo']]]]]}}" value="{{userInfo.email}}" onInput="__e"/><block a:if="{{!userInfo.email_active}}"><button data-event-opts="{{[['tap',[['toTest',['$event']]]]]}}" class="del-btn" onTap="__e">{{emailText}}</button></block></view></view><button data-event-opts="{{[['tap',[['confirm',['$event']]]]]}}" class="add-btn" onTap="__e">确认</button></view>