page {
  font-size: 16px;
}
page {
  margin: 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', 'Microsoft Yahei', sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
view,
image,
text {
  box-sizing: border-box;
  flex-shrink: 0;
}
#app {
  width: 100vw;
  height: 100vh;
}
.flex-row {
  display: flex;
  flex-direction: row;
}
.flex-col {
  display: flex;
  flex-direction: column;
}
.justify-start {
  display: flex;
  justify-content: flex-start;
}
.justify-center {
  display: flex;
  justify-content: center;
}
.justify-end {
  display: flex;
  justify-content: flex-end;
}
.justify-evenly {
  display: flex;
  justify-content: space-evenly;
}
.justify-around {
  display: flex;
  justify-content: space-around;
}
.justify-between {
  display: flex;
  justify-content: space-between;
}
.items-start {
  display: flex;
  align-items: flex-start;
}
.items-center {
  display: flex;
  align-items: center;
}
.items-end {
  display: flex;
  align-items: flex-end;
}
.container {
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  background: #fff;
}
.container .back-btn-left {
  position: absolute;
  left: 40rpx;
  z-index: 9999;
  padding-top: 25px;
  top: 40rpx;
  font-size: 36rpx;
  color: #666666;
}
.container .back-btn-right {
  position: absolute;
  right: 60rpx;
  z-index: 9999;
  padding-top: 25px;
  top: 40rpx;
  font-size: 34rpx;
  color: #666666;
}
.container .left-top-sign {
  font-size: 120rpx;
  color: #f8f8f8;
  position: relative;
  left: -16rpx;
}
.wrapper {
  position: relative;
  z-index: 90;
  padding-bottom: 40rpx;
  margin-top: 200rpx;
}
.wrapper .aside {
  width: 100%;
  height: 340px;
}
.wrapper .aside .content {
  margin: 0 auto;
  width: 80%;
  height: 100%;
}
.wrapper .aside .content .msg {
  width: 200px;
  height: 100px;
  line-height: 34px;
}
.wrapper .aside .content .msg .text {
  color: #333;
  font-size: 18px;
  font-weight: bold;
}
.wrapper .aside .input-content {
  width: 100%;
  height: 130px;
}
.wrapper .aside .input-content .wrap .errorMsg {
  width: 100%;
  height: 60rpx;
}
.wrapper .aside .input-content .wrap .errorMsg .message {
  height: 30px;
  line-height: 30px;
  color: red;
  font-size: 12px;
  margin-left: 60rpx;
}
.wrapper .aside .input-content .wrap .input-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  padding: 0 60rpx;
  background: #fff;
  height: 100rpx;
  border-radius: 30px;
  border: 1px solid #E4E7ED;
}
.wrapper .aside .input-content .wrap .input-item .tit {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  color: #DCDFE6;
}
.wrapper .aside .input-content .wrap .input-item input {
  height: 60rpx;
  font-size: 28rpx;
  color: #303133;
  width: 100%;
}
.wrapper .aside .info {
  width: 100%;
  height: 50px;
  margin-top: 80rpx;
  color: #666;
}
.wrapper .aside .info .left {
  float: left;
}
.wrapper .aside .info .right {
  float: right;
}
.wrapper .aside .loginBtn {
  width: 100%;
  height: 50px;
}
.wrapper .aside .loginBtn .confirm-btn {
  width: 100%;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 50px;
  color: #fff;
  background: linear-gradient(to right, #EE1D23, #F04023);
  font-size: 32rpx;
}
.wrapper .aside .loginBtn .confirm-btn:after {
  border-radius: 100px;
}
.register-section {
  position: absolute;
  left: 0;
  bottom: 50rpx;
  width: 100%;
  font-size: 26rpx;
  color: #606266;
  text-align: center;
}
.register-section text {
  color: #d6003c;
  margin-left: 10rpx;
}
.register-section .login {
  margin-bottom: 50px;
}
.register-section .login .otherLoginTitle {
  width: 100%;
  margin-top: 40rpx;
  text-align: center;
  color: #555555;
  font-size: 24rpx;
  line-height: 160rpx;
}
.register-section .login .otherLogin {
  width: 500rpx;
  height: 60rpx;
  margin: 10rpx auto;
  display: flex;
  justify-content: space-around;
}
.register-section .login .otherLogin view {
  width: 60rpx;
  height: 50rpx;
  background: #fff;
  border-radius: 50rpx;
}
.register-section .otherAllow {
  margin-top: 40rpx;
  color: #606266;
  font-size: 12px;
}
.register-section .otherAllow text {
  color: #909399;
}

