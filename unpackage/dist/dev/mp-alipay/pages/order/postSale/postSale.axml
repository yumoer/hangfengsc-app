<view class="content"><view class="order-item" a:for="{{$root.l0}}" a:for-item="goodsItem" a:for-index="goodsIndex" a:key="goodsIndex"><view class="i-top"><text class="time">{{"订单编号："+goodsItem.$orig.order_id}}</text><block a:if="{{goodsItem.$orig.service_step===1}}"><text class="state">用户提交</text></block><block a:if="{{goodsItem.$orig.service_step===2}}"><text class="state">审核中</text></block><block a:if="{{goodsItem.$orig.service_step===3}}"><text class="state">等待收货</text></block><block a:if="{{goodsItem.$orig.service_step===4}}"><text class="state">退款中</text></block><block a:if="{{goodsItem.$orig.service_step===5}}"><text class="state">退款完成</text></block><block a:if="{{goodsItem.$orig.service_step===6}}"><text class="state">审核不通过</text></block></view><view class="goods-box-single"><image class="goods-img" src="{{goodsItem.$orig.sku_image}}" mode="aspectFill"></image><view class="right"><text class="title clamp2">{{goodsItem.$orig.sku_name}}</text><text class="price" style="float:left;">{{goodsItem.g0+''}}<text class="attr-box" style="float:right;">{{'x '+goodsItem.$orig.count}}</text></text></view></view><view class="price-box">实付款:<text class="price" style="margin-right:20rpx;color:#333;">{{price}}</text>退款金额:<text class="price">{{price}}</text></view><view class="action-box"><button data-event-opts="{{[['tap',[['lookDetails',['$0'],[[['navList','',goodsIndex]]]]]]]}}" class="action-btn recom" onTap="__e">售后详情</button></view></view></view>