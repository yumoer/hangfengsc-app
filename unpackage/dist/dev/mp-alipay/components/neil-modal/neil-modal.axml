<view data-event-opts="{{[['touchMove',[['bindTouchmove',['$event']]]]]}}" class="{{(('neil-modal')+' '+((isOpen)?'neil-modal--show':''))}}" catchTouchMove="__e"><view data-event-opts="{{[['tap',[['clickMask',['$event']]]]]}}" class="neil-modal__mask" onTap="__e"></view><view class="neil-modal__container"><block a:if="{{title.length>0}}"><view class="neil-modal__header">{{title}}</view></block><view class="{{(('neil-modal__content')+' '+(content?'neil-modal--padding':''))}}" style="{{'text-align:'+(align)+';'}}"><block a:if="{{content}}"><text class="modal-content">{{content}}</text></block><block a:else><slot></slot></block></view><view class="neil-modal__footer"><block a:if="{{showCancel}}"><view class="neil-modal__footer-left" style="{{'color:'+(cancelColor)+';'}}" hover-class="neil-modal__footer-hover" hover-start-time="{{20}}" hover-stay-time="{{70}}" data-event-opts="{{[['tap',[['clickLeft',['$event']]]]]}}" onTap="__e">{{''+cancelText+''}}</view></block><view class="neil-modal__footer-right" style="{{'color:'+(confirmColor)+';'}}" hover-class="neil-modal__footer-hover" hover-start-time="{{20}}" hover-stay-time="{{70}}" data-event-opts="{{[['tap',[['clickRight',['$event']]]]]}}" onTap="__e">{{''+confirmText+''}}</view></view></view></view>