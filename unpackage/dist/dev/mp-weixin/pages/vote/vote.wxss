
page{
	width: 100%;
	height: 100%;
	position: relative;
	background-color: #591cd0;
}
.view{
	width: 100%;
	height: 60%;
	background-image: url(/static/vote/vote10_bg.png);
	background-size: 100% 100%;
	padding-top: 320px;
}
.wrap {
	width: 300px;
	height: auto;
	padding-left: 20px;
	background-color: #fff;
	margin: 20px auto;
	border-radius: 20px;
	padding-bottom: 40px;
}
.oleft{
	padding: 10px;
	float: left;
	margin-right: 10px;
	display: inline-block;
}
.num{
	color: #591cd0;
	font-weight: bold;
	padding: 0 5px;
}
.oright{
	padding: 10px;
	margin-right: 15px;
	float: right;
	display: inline-block;
}
.explain{
	color: #591cd0;
	font-weight: bold;
}
.vote{
	width: 100%;
	text-align: center;
	display: inline-block;
}
.left{
	width: 80px;
	height: 70px;
	display: inline-block;
	float: left;
}
.storey{
	font-size: 16px;
	font-weight: bold;
	color:#591cd0;
	line-height: 70px;
}
.right{
	width: 180px;
	float: left;
}
.top{
	font-size: 18px;
	font-weight: bold;
	color: #673AB7;
	line-height: 70px;
	margin-left: -20px;
}
.btn{
	width: 80px;
	float: right;
	background-color: #CE93D8;
	color: #fff;
	display: inline-block;
	margin-top: 15px;
}
.btns{
	width: 300px;
	color: #fff;
	background-color: #654CE6;
	position: fixed;
	left: 0;
	right: 0;
	bottom:20px;
	margin: auto;
	border-radius: 20px;
}

