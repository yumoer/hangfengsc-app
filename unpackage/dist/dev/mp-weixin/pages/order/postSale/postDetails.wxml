<block wx:if="{{goodsItem!==undefined}}"><view class="content"><view class="order-title"><view class="title-info"><view class="info-money">{{title}}</view><view class="info-time">{{"订单号: "+goodsItem.order_id}}</view></view></view><view class="order-item"><view class="i-top b-b"><text class="time">{{$root.g0[0]+" "+$root.g1[0]}}</text><text class="state" style="{{'color:'+(goodsItem.stateTipColor)+';'}}">{{goodsItem.stateTip}}</text></view><view class="goods-box-single"><image class="goods-img" src="{{goodsItem.sku_image}}" mode="aspectFill"></image><view class="right"><text class="title clamp">{{goodsItem.goods_name}}</text><text class="price" style="float:left;">{{goodsItem.price+''}}<text class="attr-box" style="float:right;">{{'x '+goodsItem.count}}</text></text></view></view><view class="price-box">退款<text class="price">{{goodsItem.price*goodsItem.count}}</text></view></view><view class="history-section icon"><list-cell vue-id="0b30ed32-1" title="订单编号" tips="{{goodsItem.order_id}}" bind:__l="__l"></list-cell><list-cell vue-id="0b30ed32-2" title="数量" tips="{{goodsItem.count+''}}" bind:__l="__l"></list-cell><list-cell vue-id="0b30ed32-3" title="售后原因" tips="{{goodsItem.cause}}" bind:__l="__l"></list-cell><view style="background:#fff;"><block wx:if="{{goodsItem.images.length>0}}"><view class="sec-header"><text>图片凭证</text></view></block><block wx:if="{{goodsItem.images.length>0}}"><scroll-view class="h-list" scroll-x="{{true}}"><block wx:for="{{goodsItem.images}}" wx:for-item="img" wx:for-index="index" wx:key="index"><image style="border:solid 1px #ddd;" src="{{img}}" mode="aspectFill"></image></block></scroll-view></block></view><list-cell vue-id="0b30ed32-4" title="售后类型" tips="{{goodsItem.service_type===1?'退货':'换货'}}" bind:__l="__l"></list-cell><block wx:if="{{goodsItem.service_step===1}}"><list-cell vue-id="0b30ed32-5" title="服务步骤" tips="用户提交" bind:__l="__l"></list-cell></block><block wx:if="{{goodsItem.service_step===2}}"><list-cell vue-id="0b30ed32-6" title="服务步骤" tips="后台审核中" bind:__l="__l"></list-cell></block><block wx:if="{{goodsItem.service_step===3}}"><list-cell vue-id="0b30ed32-7" title="服务步骤" tips="审核通过" bind:__l="__l"></list-cell></block><block wx:if="{{goodsItem.service_step===4}}"><list-cell vue-id="0b30ed32-8" title="服务步骤" tips="退款中" bind:__l="__l"></list-cell></block><block wx:if="{{goodsItem.service_step===5}}"><list-cell vue-id="0b30ed32-9" title="服务步骤" tips="退款完成" bind:__l="__l"></list-cell></block><list-cell vue-id="0b30ed32-10" title="提交时间" tips="{{$root.g2[0]+' '+$root.g3[0]}}" bind:__l="__l"></list-cell><list-cell vue-id="0b30ed32-11" title="更新时间" tips="{{$root.g4[0]+' '+$root.g5[0]}}" bind:__l="__l"></list-cell><list-cell vue-id="0b30ed32-12" title="拒绝理由" tips="{{goodsItem.close_cause}}" bind:__l="__l"></list-cell></view></view></block>